<div class="container">
  <div class="row">
    <div class="col-md-9">
      <h2>Trips</h2>
      <% if current_user.role == "admin" %>
        <%= link_to 'New Trip', new_trip_path, class: 'btn btn-primary btn-sm' %>
      <br>
      <br>
      <% end %>

      <form class="form-horizontal">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="City from drive">
          <div class="input-group-btn">
          </div>

          <input type="text" class="form-control" placeholder="City to drive">
          <div class="input-group-btn">
          </div>

          <input type="text" class="form-control" placeholder="Date">
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i class="glyphicon glyphicon-search"></i>
            </button>
          </div>
        </div>
      </form>

      <%= form_tag trips_path, method: 'get' do %>
        <p>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search", name: nil %>
        </p>
      <% end %>

    <div class="container">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= link_to "City from", sort: "city_from" %></th>
            <th><%= link_to "City to", sort: "city_to" %></th>
            <th><%= link_to "Date and time when go", sort: "date and time when go" %></th>
            <th><%= link_to "Date and time when arrived", sort: "date and time when arrived" %></th>
            <th><%= link_to "Tickets count", sort: "tickets count" %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @trips.each do |trip| %>
            <tr>
              <td><%= link_to trip.city_from, trip %></td>
              <td><%= link_to trip.city_to, trip %></td>
              <td><%= link_to trip.date_when_go, trip %></td>
              <td><%= link_to trip.date_when_arrived, trip %></td>
              <td><%= link_to trip.tickets_count, trip %></td>

              <% if current_user.role == "admin" %>
                <td><%= link_to 'Edit', edit_trip_path(trip), class: 'btn btn-default btn-sm' %></td>
                <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' },
                                                                class: 'btn btn-danger btn-sm' %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

